      function = SLIDER
      state = NORMAL
      file = "Others/null.png"
      border = { 0, 0, 0, 0 }
      stretch = TRUE
      overlay_file = "Range/slider-vert.png"
      overlay_stretch = FALSE
      orientation = VERTICAL
    }

    image {
      function = SLIDER
      state = PRELIGHT
      file = "Others/null.png"
      border = { 0, 0, 0, 0 }
      stretch = TRUE
      overlay_file = "Range/slider-vert-prelight.png"
      overlay_stretch = FALSE
      orientation = VERTICAL
    }

    image {
      function = SLIDER
      state = INSENSITIVE
      file = "Others/null.png"
      border = { 0, 0, 0, 0 }
      stretch = TRUE
      overlay_file = "Range/slider-vert.png"
      overlay_stretch = FALSE
      orientation = VERTICAL
    }

    # Function below removes ugly boxes

    image {
      function = BOX
      file = "Others/null.png"
      border = { 3, 3, 3, 3 }
      stretch = TRUE
    }
  }
}

